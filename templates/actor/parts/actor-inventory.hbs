{{! Item Tab }}
<div class="grid grid-4col">
  {{! Weapons }}
  <ol class="items-list list list-1col">
    {{! For each weapon }}
    {{#each weapon as |weapon key|}}
    <li class="item expandable-parent">
      {{! Expandable Header }}
      <a class="item-header" data-id={{weapon._id}}>

        {{! Label }}
        <div class="item-label expand">
          <img class="item-image" src="{{weapon.img}}" />
          <span class="item-name">{{weapon.name}}</span>
        </div>

        {{! Edit Buttons }}
      </a>

      {{! Expandable Content }}
      <div class="item-details expandable-content{{#unless (lookup ../isExpanded weapon._id)}} collapsed{{/unless}}">
        {{! Description }}
        {{{weapon.system.description}}}
        {{{weapon.system.attackDescription}}}

        {{! Footer }}
        <div class="item-footer">
          <span class="item-rarity">{{localize (concat "TITAN.item.rarity.option."
            weapon.system.rarity
            ".label")}}</span>
          <span class="item-value">{{localize "TITAN.item.value.label"}}: {{localize weapon.system.value}}</span>
        </div>
      </div>
    </li>
    {{/each}}
  </ol>
</div>