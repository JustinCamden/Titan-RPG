{{! Skills Tab }}
<div>
  {{! Resiliences List }}
  <div class="resiliences-panel grid grid-3col border">
    {{#each data.resiliences as |resilience key|}}
      <div class="align-center flex-group-center border">
        <label
          for="data.resiliences.{{key}}"
          class="stat-label rollable"
          data-roll-type="resilience"
          data-roll-resilience={{key}}
        >{{localize (concat "TITAN.resiliences." key)}}</label>
        <div class="stat-content flexrow flex-group-center flex-between">
          <label
            for="data.resiliences.{{key}}.training.value"
            class="stat-label"
          >{{localize "TITAN.training"}}</label>
          <label for="data.resiliences.{{key}}" class="stat-label"> </label>
          <label
            for="data.resiliences.{{key}}.expertise.value"
            class="stat-label"
          >{{localize "TITAN.expertise"}}</label>
        </div>
        <div class="stat-content flexrow flex-group-center flex-between">
          <input
            class="resilience-edit expertise-edit"
            type="text"
            name="data.resiliences.{{key}}.training.baseValue"
            value="{{resilience.training.value}}"
            data-resilience={{key}}
            data-resilience-type="training"
            data-dtype="Number"
          />
          <span> </span>
          <input
            class="resilience-edit expertise-edit"
            type="text"
            name="data.resiliences.{{key}}.expertise.baseValue"
            value="{{resilience.expertise.value}}"
            data-resilience={{key}}
            data-resilience-type="expertise"
            data-dtype="Number"
          />
        </div>
      </div>
    {{/each}}
  </div>

  {{! Skills List }}
  <ol class="skills-list list list-4col">
    {{#each data.skills as |skill key|}}
      <li class="skill flex-group-center list-item border">
        <label
          for="data.skills.{{key}}"
          class="stat-label rollable"
          data-roll-type="skill"
          data-roll-skill={{key}}
        >{{localize (concat "TITAN.skills." key)}}</label>

        <div class="stat-content flexrow flex-group-center flex-between">
          <label
            for="data.skills.{{key}}.training.value"
            class="stat-label"
          >{{localize "TITAN.training"}}</label>
          <label for="data.skills.{{key}}" class="stat-label"> </label>
          <label
            for="data.skills.{{key}}.expertise.value"
            class="stat-label"
          >{{localize "TITAN.expertise"}}</label>
        </div>
        <div class="stat-content flexrow flex-group-center flex-between">
          <input
            class="skill-edit expertise-edit"
            type="text"
            name="data.skills.{{key}}.training.baseValue"
            value="{{skill.training.value}}"
            data-skill={{key}}
            data-skill-type="training"
            data-dtype="Number"
          />
          <span> </span>
          <input
            class="skill-edit expertise-edit"
            type="text"
            name="data.skills.{{key}}.expertise.baseValue"
            value="{{skill.expertise.value}}"
            data-skill={{key}}
            data-skill-type="expertise"
            data-dtype="Number"
          />
        </div>
      </li>
    {{/each}}
  </ol>
</div>