<ol class="skills-list">
{{#each data.skills as |skill key|}}
  <li class="skill flex-group-center">
    <label
      for="data.skills.{{key}}"
      class="stat-label rollable"
      data-roll="(@skills.{{key}}.training.value + @attributes.{{skill.defaultAttribute}}.value)d6"
      data-roll-type="skill"
      data-roll-label={{localize (concat "TITAN.skills." key)}}
    >{{localize (concat "TITAN.skills." key)}}</label>

    <div class="stat-content flexrow flex-group-center flex-between">
      <label for="data.exp.available" class="stat-label">{{localize "TITAN.training"}}</label>
      <label for="data.exp.available" class="stat-label"> </label>
      <label for="data.exp.available" class="stat-label">{{localize "TITAN.focus"}}</label>
    </div>
    <div class="stat-content flexrow flex-group-center flex-between">
      <input
        class="skill-edit focus-edit"
        type="text"
        name="data.skills.{{key}}.training.baseValue"
        value="{{skill.training.value}}"
        data-dtype="Number"
      />
      <span> </span>
      <input
        class="skill-edit focus-edit"
        type="text"
        name="data.skills.{{key}}.focus.baseValue"
        value="{{skill.focus.value}}"
        data-dtype="Number"
      />
    </div>
  </li>
{{/each}}
</ol>