{{! Skills Tab }}
<div>
  {{! Attributes}}
  <div class="attributes-panel grid grid-3col">
    {{! Mind }}
    <div class="attribute flex-group-center border">
      <label
        for="data.attributes.mind.value"
        class="stat-label rollable"
        data-roll-type="attribute"
        data-roll-attribute="mind"
      >
        {{localize "TITAN.attributes.mind"}}</label>
      <div class="stat-content flexrow flex-group-center flex-between">
        <input
          class="attribute-edit"
          type="text"
          name="data.attributes.mind.baseValue"
          value="{{data.attributes.mind.baseValue}}"
          data-dtype="Number"
        />
      </div>
    </div>

    {{! Body }}
    <div class="attribute flex-group-center border">
      <label
        for="data.attributes.body.value"
        class="stat-label rollable"
        data-roll-type="attribute"
        data-roll-attribute="body"
      >
        {{localize "TITAN.attributes.body"}}
      </label>
      <div class="stat-content flexrow flex-group-center flex-between">
        <input
          class="attribute-edit"
          type="number"
          name="data.attributes.body.baseValue"
          value="{{data.attributes.body.baseValue}}"
          data-dtype="Number"
        />
      </div>
    </div>

    {{! Soul }}
    <div class="attribute flex-group-center border">
      <label
        for="data.attributes.soul.value"
        class="stat-label rollable"
        data-roll-type="attribute"
        data-roll-attribute="soul"
      >
        {{localize "TITAN.attributes.soul"}}
      </label>
      <div class="stat-content flexrow flex-group-center flex-between">
        <input
          class="attribute-edit"
          type="text"
          name="data.attributes.soul.baseValue"
          value="{{data.attributes.soul.baseValue}}"
          data-dtype="Number"
        />
      </div>
    </div>

  </div>

  {{! Skills List }}
  <ol class="skills-list list list-4col">
    {{#each data.skills as |skill key|}}
      <li class="skill flex-group-center list-item border">
        <label
          for="data.skills.{{key}}"
          class="stat-label rollable"
          data-roll-type="skill"
          data-roll-skill={{key}}
        >{{localize (concat "TITAN.skills." key)}}</label>

        <div class="stat-content flexrow flex-group-center flex-between">
          <label
            for="data.skills.{{key}}.training.value"
            class="stat-label"
          >{{localize "TITAN.training"}}</label>
          <label for="data.skills.{{key}}" class="stat-label"> </label>
          <label
            for="data.skills.{{key}}.expertise.value"
            class="stat-label"
          >{{localize "TITAN.expertise"}}</label>
        </div>
        <div class="stat-content flexrow flex-group-center flex-between">
          <input
            class="skill-edit expertise-edit"
            type="text"
            name="data.skills.{{key}}.training.baseValue"
            value="{{skill.training.value}}"
            data-skill={{key}}
            data-skill-type="training"
            data-dtype="Number"
          />
          <span> </span>
          <input
            class="skill-edit expertise-edit"
            type="text"
            name="data.skills.{{key}}.expertise.baseValue"
            value="{{skill.expertise.value}}"
            data-skill={{key}}
            data-skill-type="expertise"
            data-dtype="Number"
          />
        </div>
      </li>
    {{/each}}
  </ol>
</div>