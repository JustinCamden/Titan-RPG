{{! Decrease Rating }}
<div class="spell-sheet-aspects-tab-decrease-rating stat-category">

  {{! Category label }}
  <h3 class="stat-category-label">{{localize "TITAN.decreaseRating.label"}}</h3>

  {{! Initial Value }}
  {{> "systems/titan/templates/item/spell/components/spell-sheet-aspects-tab-number-input.hbs"
  label="TITAN.decrease.label"
  path="system.decreaseRating.initialValue"
  value=system.decreaseRating.initialValue
  }}

  {{! If Initial Value > 0 }}
  {{#if (greater system.decreaseRating.initialValue 0)}}

  {{! Choose }}
  {{#if (greater system.decreaseRating.choose 0)}}
  {{> "systems/titan/templates/item/spell/components/spell-sheet-aspects-tab-number-input.hbs"
  label="TITAN.choose.label"
  path="system.decreaseRating.choose"
  value=system.decreaseRating.choose
  }}
  {{/if}}

  {{! Each current active rating }}
  {{#each system.decreaseRating.rating as |rating key|}}
  {{#if rating}}
  <div class="stat-field-horizontal">
    {{! Label }}
    <div class="stat-label">
      {{localize (concat "TITAN.rating.option." key ".label")}}
    </div>

    {{! Delete Button }}
    <a class="fas fa-trash delete-decrease-rating" data-rating={{key}}></a>
  </div>
  {{/if}}
  {{/each}}

  {{! Add Inactive rating }}
  {{#if decreaseRatingOptions}}
  <div class="stat-field-vertical">

    {{! Type Label }}
    <div class="stat-label">
      {{localize "TITAN.addRating.label"}}
    </div>

    {{! Type Select }}
    <select class="stat-input add-decrease-rating">
      {{selectOptions decreaseRatingOptions selected=system.decreaseRatingOptions.none localize=true}}
    </select>
  </div>
  {{/if}}

  {{#if decreaseRating}}

  {{! Resistance Check }}
  {{> "systems/titan/templates/item/spell/components/spell-sheet-aspects-tab-resistance-check-select.hbs"
  path="system.decreaseRating.resistanceCheck"
  options=resistanceCheckOptions
  value=system.decreaseRating.resistanceCheck
  }}

  {{! Overcast }}
  {{> "systems/titan/templates/item/spell/components/spell-sheet-aspects-tab-overcast.hbs"
  overcast=system.decreaseRating.overcast
  path="system.decreaseRating"
  }}
  {{/if}}
  {{/if}}
</div>