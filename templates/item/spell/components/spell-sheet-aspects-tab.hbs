    {{! Category label }}
    <h3 class="stat-category-label">{{localize "TITAN.conditionRemovalAndImmunity.label"}}</h3>

    {{! All }}
    <div class="condition-extra-wide-row">
      <div class="stat-field-horizontal ">
        {{! Label }}
        <div class="stat-label">
          {{localize "TITAN.all.label"}}
        </div>

        {{! Checkbox }}
        <input name="system.conditionRemovalAndImmunity.all" class="stat-input" type="checkbox" {{checked
          system.conditionRemovalAndImmunity.all}}>
      </div>
    </div>

    {{#if (not system.conditionRemovalAndImmunity.all)}}
    <div class="condition-rows">
      {{! Blinded }}
