{{! Condition infliction }}
<div class="spell-sheet-aspects-tab-condition-infliction stat-category">

  {{! Category label }}
  <h3 class="stat-category-label">{{localize "TITAN.conditionInfliction.label"}}</h3>

  {{! Each current active condition }}
  {{#each system.conditionInfliction as |condition key|}}
  {{#if condition.enabled}}
  <div class="stat-field-horizontal">
    {{! Label }}
    <div class="stat-label">
      {{localize (concat "TITAN.condition.option." key ".label")}}
    </div>

    {{! Delete Button }}
    <a class="fas fa-trash delete-condition-infliction" data-condition={{key}}></a>
  </div>
  {{/if}}
  {{/each}}

  {{! Add Inactive Condition }}
  {{#if conditionInflictionOptions}}
  <div class="stat-field-vertical">

    {{! Type Label }}
    <div class="stat-label">
      {{localize "TITAN.addCondition.label"}}
    </div>

    {{! Type Select }}
    <select class="stat-input add-condition-infliction">
      {{selectOptions conditionInflictionOptions selected=system.conditionInflictionOptions.none localize=true}}
    </select>
  </div>
  {{/if}}
</div>