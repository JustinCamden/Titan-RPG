{{! Increase Resistance }}
<div class="spell-sheet-aspects-tab-increase-resistance stat-category">

  {{! Category label }}
  <h3 class="stat-category-label">{{localize "TITAN.increaseResistance.label"}}</h3>

  {{! Choose }}
  {{#if (greater system.increaseResistance.choose 0)}}
  {{> "systems/titan/templates/item/spell/components/spell-sheet-aspects-tab-number-input.hbs"
  label="TITAN.choose.label"
  path="system.increaseResistance.choose"
  value=system.increaseResistance.choose
  }}
  {{/if}}

  {{! Each current active resistance }}
  {{#each system.increaseResistance.resistance as |resistance key|}}
  {{#if resistance}}
  <div class="stat-field-horizontal">
    {{! Label }}
    <div class="stat-label">
      {{localize (concat "TITAN.resistance.option." key ".label")}}
    </div>

    {{! Delete Button }}
    <a class="fas fa-trash delete-increase-resistance" data-resistance={{key}}></a>
  </div>
  {{/if}}
  {{/each}}

  {{! Add Inactive resistance }}
  {{#if increaseResistanceOptions}}
  <div class="stat-field-vertical">

    {{! Type Label }}
    <div class="stat-label">
      {{localize "TITAN.addResistance.label"}}
    </div>

    {{! Type Select }}
    <select class="stat-input add-increase-resistance">
      {{selectOptions increaseResistanceOptions selected=system.increaseResistanceOptions.none localize=true}}
    </select>
  </div>
  {{/if}}

  {{! Overcast }}
  {{#if increaseResistance}}
  {{> "systems/titan/templates/item/spell/components/spell-sheet-aspects-tab-overcast.hbs"
  overcast=system.increaseResistance.overcast
  path="system.increaseResistance"
  }}
  {{/if}}
</div>