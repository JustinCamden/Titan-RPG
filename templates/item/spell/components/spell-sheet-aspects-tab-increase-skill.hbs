{{! Increase Skill }}
<div class="spell-sheet-aspects-tab-increase-skill stat-category">

  {{! Category label }}
  <h3 class="stat-category-label">{{localize "TITAN.increaseSkill.label"}}</h3>

  {{! Choose }}
  {{#if (greater system.increaseSkill.choose 0)}}
  {{> "systems/titan/templates/item/spell/components/spell-sheet-aspects-tab-number-input.hbs"
  label="TITAN.choose.label"
  path="system.increaseSkill.choose"
  value=system.increaseSkill.choose
  }}
  {{/if}}

  {{! Each current active skill }}
  {{#each system.increaseSkill.skill as |skill key|}}
  {{#if skill}}
  <div class="stat-field-horizontal">
    {{! Label }}
    <div class="stat-label">
      {{localize (concat "TITAN.skill.option." key ".label")}}
    </div>

    {{! Delete Button }}
    <a class="fas fa-trash delete-increase-skill" data-skill={{key}}></a>
  </div>
  {{/if}}
  {{/each}}

  {{! Add Inactive skill }}
  {{#if increaseSkillOptions}}
  <div class="stat-field-vertical">

    {{! Type Label }}
    <div class="stat-label">
      {{localize "TITAN.addSkill.label"}}
    </div>

    {{! Type Select }}
    <select class="stat-input add-increase-skill">
      {{selectOptions increaseSkillOptions selected=system.increaseSkillOptions.none localize=true}}
    </select>
  </div>
  {{/if}}

  {{! Overcast }}
  {{#if increaseSkill}}
  {{> "systems/titan/templates/item/spell/components/spell-sheet-aspects-tab-overcast.hbs"
  overcast=system.increaseSkill.overcast
  path="system.increaseSkill"
  }}
  {{/if}}
</div>