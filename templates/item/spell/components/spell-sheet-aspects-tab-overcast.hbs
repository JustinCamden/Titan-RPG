{{! Overcast Enable }}
{{> "systems/titan/templates/item/spell/components/spell-sheet-aspects-tab-checkbox-input.hbs"
label=(concat (localize "TITAN.spell.overcast.label") "?")
path=(concat path ".overcast.enable")
value=overcast.enable
}}

{{! Overcast Calculate Success Cost }}
{{#if overcast.enable}}
{{> "systems/titan/templates/item/spell/components/spell-sheet-aspects-tab-checkbox-input.hbs"
label=(concat (localize "TITAN.spell.overcast.calculateSuccessCost.label") "?")
path=(concat path ".overcast.calculateSuccessCost")
value=overcast.calculateSuccessCost
}}

<div class="stat-field-horizontal">
  {{! Overcast Success Cost Label }}
  <div class="stat-label">
    {{localize "TITAN.spell.overcast.successCost.label"}}
  </div>

  {{#if overcast.calculateSuccessCost}}
  {{! Overcast Success Cost }}
  <div class="stat-input">
    {{overcast.successCost}}
  </div>
  {{else}}
  {{! Overcast Success Cost Input }}
  <input name="{{path}}.overcast.successCost" class="stat-input" type="number" value="{{overcast.successCost}}"
    data-dtype="Number" />
  {{/if}}
</div>
{{/if}}