{{! Condition removal }}
<div class="spell-sheet-aspects-tab-remove-condition stat-category">

  {{! Category label }}
  <h3 class="stat-category-label">{{localize "TITAN.removeCondition.label"}}</h3>

  {{! If all is true }}
  {{#if system.removeCondition.all}}
  <div class="stat-field-horizontal">
    {{! Label }}
    <div class="stat-label">
      {{localize "TITAN.all.label"}}
    </div>

    {{! Delete Button }}
    <a class="fas fa-trash delete-remove-condition" data-condition="all"></a>
  </div>
  {{else}}

  {{! Each current active condition }}
  {{#each system.removeCondition.condition as |condition key|}}
  {{#if condition}}
  <div class="stat-field-horizontal">
    {{! Label }}
    <div class="stat-label">
      {{localize (concat "TITAN.condition.option." key ".label")}}
    </div>

    {{! Delete Button }}
    <a class="fas fa-trash delete-remove-condition" data-condition={{key}}></a>
  </div>
  {{/if}}
  {{/each}}

  {{! Any }}
  {{#if (greater system.removeCondition.any 0)}}
  <div class="stat-sub-category">
    <div class="stat-field-horizontal">
      {{! Label }}
      <div class="stat-label">
        {{localize "TITAN.any.label"}}
      </div>

      {{! Input }}
      <input name="system.removeCondition.any" class="stat-input" type="number" value="{{system.removeCondition.any}}"
        data-dtype="Number" />
    </div>

    {{! Overcast }}
    <div class="stat-field-horizontal">
      {{! Overcast Label }}
      <div class="stat-label">
        {{concat (localize "TITAN.spell.overcast.label")"?"}}
      </div>

      {{! Overcast Checkbox }}
      <input name="system.removeCondition.overcast.enable" class="stat-input" type="checkbox" {{checked
        system.removeCondition.overcast.enable}} />
    </div>

    {{! Overcast Success Cost }}
    {{#if system.removeCondition.overcast.enable}}
    <div class="stat-field-horizontal">

      {{! Calculate Success Cost }}
      <div class="stat-label">
        {{concat (localize "TITAN.spell.overcast.calculateSuccessCost.label") "?"}}
      </div>

      {{! Calculate Success Cost Checkbox }}
      <input name="system.removeCondition.overcast.calculateSuccessCost" class="stat-input" type="checkbox" {{checked
        system.removeCondition.overcast.calculateSuccessCost}} />
    </div>

    <div class="stat-field-horizontal">
      {{! Overcast Success Cost Label }}
      <div class="stat-label">
        {{localize "TITAN.spell.overcast.successCost.label"}}
      </div>

      {{#if system.removeCondition.overcast.calculateSuccessCost}}
      {{! Overcast Success Cost }}
      <div class="stat-input">
        {{system.removeCondition.overcast.successCost}}
      </div>
      {{else}}
      {{! Overcast Success Cost Input }}
      <input name="system.removeCondition.overcast.successCost" class="stat-input" type="number"
        value="{{system.removeCondition.overcast.successCost}}" data-dtype="Number" />
      {{/if}}
    </div>
  </div>
  {{/if}}
  {{/if}}

  {{! Add Inactive Condition }}
  {{#if removeConditionOptions}}
  <div class="stat-field-vertical">

    {{! Type Label }}
    <div class="stat-label">
      {{localize "TITAN.addCondition.label"}}
    </div>

    {{! Type Select }}
    <select class="stat-input add-remove-condition">
      {{selectOptions removeConditionOptions selected=system.removeConditionOptions.none localize=true}}
    </select>
  </div>
  {{/if}}
  {{/if}}

</div>