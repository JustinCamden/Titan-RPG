{{! Condition removal }}
<div class="spell-sheet-aspects-tab-condition-removal stat-category">

  {{! Category label }}
  <h3 class="stat-category-label">{{localize "TITAN.conditionRemoval.label"}}</h3>

  {{! If all is false }}
  {{#if system.conditionRemoval.all}}
  <div class="stat-field-horizontal">
    {{! Label }}
    <div class="stat-label">
      {{localize "TITAN.all.label"}}
    </div>

    {{! Delete Button }}
    <a class="fas fa-trash delete-condition-removal" data-condition="all"></a>
  </div>
  {{else}}

  {{! Add Inactive Condition }}
  {{#if conditionRemovalOptions}}
  <div class="stat-field-vertical">

    {{! Type Label }}
    <div class="stat-label">
      {{localize "TITAN.addCondition.label"}}
    </div>

    {{! Type Select }}
    <select class="stat-input add-condition-removal">
      {{selectOptions conditionRemovalOptions selected=system.conditionRemovalOptions.none localize=true}}
    </select>
  </div>
  {{/if}}

  {{! Each current active condition }}
  {{#each system.conditionRemoval.condition as |condition key|}}
  {{#if condition}}
  <div class="stat-field-horizontal">
    {{! Label }}
    <div class="stat-label">
      {{localize (concat "TITAN.condition.option." key ".label")}}
    </div>

    {{! Delete Button }}
    <a class="fas fa-trash delete-condition-removal" data-condition={{key}}></a>
  </div>
  {{/if}}
  {{/each}}

  {{! Any }}
  {{#if (greater system.conditionRemoval.any 0)}}
  <div class="stat-field-horizontal">
    {{! Label }}
    <div class="stat-label">
      {{localize "TITAN.any.label"}}
    </div>

    {{! Input }}
    <input name="system.conditionRemoval.any" class="stat-input" type="number" value="{{system.conditionRemoval.any}}"
      data-dtype="Number" />
  </div>

  {{! Overcast }}
  <div class="stat-field-horizontal">
    {{! Overcast Label }}
    <div class="stat-label">
      {{concat (localize "TITAN.spell.overcast.label")"?"}}
    </div>

    {{! Overcast Checkbox }}
    <input name="system.conditionRemoval.overcast.enable" class="stat-input" type="checkbox" {{checked
      system.conditionRemoval.overcast.enable}} />
  </div>

  {{! Overcast Success Cost }}
  {{#if system.conditionRemoval.overcast.enable}}
  <div class="stat-field-horizontal">

    {{! Calculate Success Cost }}
    <div class="stat-label">
      {{concat (localize "TITAN.spell.overcast.calculateSuccessCost.label") "?"}}
    </div>

    {{! Calculate Success Cost Checkbox }}
    <input name="system.conditionRemoval.overcast.calculateSuccessCost" class="stat-input" type="checkbox" {{checked
      system.conditionRemoval.overcast.calculateSuccessCost}} />
  </div>
  {{/if}}
  {{/if}}
  {{/if}}

</div>