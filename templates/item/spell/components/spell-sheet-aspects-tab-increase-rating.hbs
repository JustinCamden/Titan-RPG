{{! Increase Rating }}
<div class="spell-sheet-aspects-tab-increase-rating stat-category">

  {{! Category label }}
  <h3 class="stat-category-label">{{localize "TITAN.increaseRating.label"}}</h3>

  {{! Initial Value }}
  {{> "systems/titan/templates/item/spell/components/spell-sheet-aspects-tab-number-input.hbs"
  label="TITAN.increase.label"
  path="system.increaseRating.initialValue"
  value=system.increaseRating.initialValue
  }}

  {{! If Initial Value > 0 }}
  {{#if (greater system.increaseRating.initialValue 0)}}

  {{! Choose }}
  {{#if (greater system.increaseRating.choose 0)}}
  {{> "systems/titan/templates/item/spell/components/spell-sheet-aspects-tab-number-input.hbs"
  label="TITAN.choose.label"
  path="system.increaseRating.choose"
  value=system.increaseRating.choose
  }}
  {{/if}}

  {{! Each current active rating }}
  {{#each system.increaseRating.rating as |rating key|}}
  {{#if rating}}
  <div class="stat-field-horizontal">
    {{! Label }}
    <div class="stat-label">
      {{localize (concat "TITAN.rating.option." key ".label")}}
    </div>

    {{! Delete Button }}
    <a class="fas fa-trash delete-increase-rating" data-rating={{key}}></a>
  </div>
  {{/if}}
  {{/each}}

  {{! Add Inactive rating }}
  {{#if increaseRatingOptions}}
  <div class="stat-field-vertical">

    {{! Type Label }}
    <div class="stat-label">
      {{localize "TITAN.addRating.label"}}
    </div>

    {{! Type Select }}
    <select class="stat-input add-increase-rating">
      {{selectOptions increaseRatingOptions selected=system.increaseRatingOptions.none localize=true}}
    </select>
  </div>
  {{/if}}


  {{#if increaseRating}}
  {{! Overcast }}
  {{> "systems/titan/templates/item/spell/components/spell-sheet-aspects-tab-overcast.hbs"
  overcast=system.increaseRating.overcast
  path="system.increaseRating"
  }}
  {{/if}}
  {{/if}}
</div>