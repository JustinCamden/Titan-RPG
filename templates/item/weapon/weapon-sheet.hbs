<form class="{{cssClass}} weapon-sheet" autocomplete="off">
  {{! Header}}
  <div class="sheet-header weapon-header">

    {{! Label }}
    <div class="weapon-label">
      {{! Image }}
      <img class="weapon-image" src="{{item.img}}" data-edit="img" title="{{item.name}}" />

      {{! Name}}
      <h1 class="weapon-name"><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
    </div>

    {{! Fields }}
    <div class="weapon-header-fields">

      {{! Rarity }}
      <div class="weapon-rarity">
        <label class="stat-label">{{localize "TITAN.item.rarity.label"}}</label>
        <div>
          <select name="system.rarity">
            {{selectOptions rarityOptions selected=system.rarity localize=true}}
          </select>
        </div>
      </div>

      {{! Value}}
      <div class="weapon-value">
        <label class="stat-label flex-group-right">{{localize
          "TITAN.item.value.label"
          }}</label>
        <input type="text" name="system.value" class="flex-group-right" value="{{system.value}}" data-dtype="Number" />
      </div>
    </div>
  </div>

  <div class="sheet-body weapon-content">
    {{! Sheet Tab Navigation }}
    <nav class="sheet-tabs tabs" data-group="primary">
      <a class="item" data-tab="description">{{localize "TITAN.description.label"}}</a>
      <a class="item" data-tab="attacks">{{localize "TITAN.attacks.label"}}</a>
    </nav>

    {{! Description Tab }}
    <div class="tab" data-group="primary" data-tab="description">
      {{> "systems/titan/templates/item/weapon/components/weapon-description-tab.hbs"}}
    </div>

    {{! Attacks Tab }}
    <div class="tab" data-group="primary" data-tab="attacks">
      {{> "systems/titan/templates/item/weapon/components/weapon-attacks-tab.hbs"}}
    </div>
  </div>
</form>