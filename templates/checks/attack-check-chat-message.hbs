<div class="titan check attack-check">

  {{! Check title }}
  <div class="check-title">
    {{! Label is appropriate}}
    {{#if label}}
    <h2 class="check-label">
      {{label}}
    </h2>
    <h3 class="check-stats">
      {{concat checkData.weaponName " (" checkData.attack.name ")"}}
    </h3>
    {{else}}

    {{! Use the attack name as the label if there is no label }}
    <h2 class="check-label">
      {{concat parameters.weaponName " (" checkData.attack.name ")"}}
    </h2>
    {{/if}}

    {{! Stats rolled }}
    <h3 class="check-stats">
      {{localize (concat "TITAN.attribute.option." parameters.attribute ".label")}}
      {{#if parameters.skill}}
      {{concat "(" (localize (concat "TITAN.skill.option." parameters.skill ".label")) ")"}}
      {{/if}}
      {{concat parameters.difficulty ":" parameters.complexity}}
    </h3>

    {{! Attack Ratings }}
    <h3 class="check-stats">
      {{#if parameters.targetDefense}}
      {{#if (equals parameters.type "melee")}}
      {{localize "TITAN.rating.option.melee.label"}}
      {{parameters.attackerMelee}}
      {{else}}
      {{localize "TITAN.rating.option.accuracy.label"}}
      {{/if}}
      {{localize "TITAN.versus.label"}}
      {{localize "TITAN.rating.option.defense.label"}}
      {{parameters.targetDefense}}
      {{/if}}
    </h3>
  </div>

  {{! Dice Container }}
  {{> "systems/titan/templates/checks/components/check-dice-container.hbs" }}

  {{! Results Banner }}
  {{> "systems/titan/templates/checks/components/check-results-banner.hbs" }}
</div>