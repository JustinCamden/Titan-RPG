<div class="titan check attack-check">
  {{! Wea}}
  <h2>
    {{weaponName}}
  </h2>
  {{#if type}}
  <h3>
    {{type}}
  </h3>
  {{/if}}
  <h3>
    {{label}}
    {{localize (concat parameters.difficulty ":" parameters.complexity)}}
  </h3>

  {{! Check title }}
  <div class="check-title">
    {{! Label is appropriate}}
    {{#if label}}
    <h2 class="check-label">
      {{label}}
    </h2>

    {{! Stats rolled }}
    <h3 class="check-stats">
      {{localize (concat "TITAN.resistance.option." parameters.resistance ".label")}}
      {{concat parameters.difficulty ":" parameters.complexity}}
      {{concat parameters.difficulty ":" parameters.complexity}}
    </h3>
    {{else}}

    {{! Use the stats as the label if there is no label }}
    <h2 class="check-label">
      {{localize (concat "TITAN.resistance.option." parameters.resistance ".label")}}
      {{concat parameters.difficulty ":" parameters.complexity}}
    </h2>
    {{/if}}
  </div>

  {{! Dice }}
  <div class="dice-container">
    {{#each results.dice as |dice idx|}}
    <div class="align-center flex-group-center die d6">
      {{#if dice.success}}

      {{! Critical Success }}
      {{#if dice.criticalSuccess}}

      {{! Expertise }}
      {{#if dice.expertiseApplied}}
      <div class="die-critical-success expertise-border">
        {{dice.base}}
        +
        {{dice.expertiseApplied}}
      </div>

      {{! No Expertise }}
      {{else}}
      <div class="die-critical-success normal-border">
        {{dice.base}}
      </div>
      {{/if}}
      {{else}}
      {{! Success }}
      {{! Expertise }}
      {{#if dice.expertiseApplied}}
      <div class="die-success expertise-border">
        {{dice.base}}
        +
        {{dice.expertiseApplied}}
      </div>
      {{else}}
      {{! No Expertise }}
      <div class="die-success normal-border">
        {{dice.base}}
      </div>
      {{/if}}
      {{/if}}
      {{else}}
      {{! Critical Failure }}
      {{#if dice.criticalFailure}}

      {{! Expertise }}
      {{#if dice.expertiseApplied}}
      <div class="die-critical-failure expertise-border">
        {{dice.base}}
        +
        {{dice.expertiseApplied}}
      </div>

      {{! No Expertise }}
      {{else}}
      <div class="die-critical-failure normal-border">
        {{dice.base}}
      </div>
      {{/if}}

      {{else}}
      {{! Failure }}
      {{! Expertise }}
      {{#if dice.expertiseApplied}}
      <div class="die-failure expertise-border">
        {{dice.base}}
        +
        {{dice.expertiseApplied}}
      </div>
      {{else}}

      {{! No expertise }}
      <div class="die-failure normal-border">
        {{dice.base}}
      </div>
      {{/if}}
      {{/if}}
      {{/if}}
    </div>
    {{/each}}
  </div>
  <div class="results-banner align-center flex-group-center border">
    {{results.successes}}
    {{localize "TITAN.check.successes.label"}}
    {{#if results.succeeded}}
    <div class="success-banner">
      {{localize "TITAN.check.succeeded.label"}}
    </div>
    {{#if results.extraSuccesses}}
    {{localize "TITAN.check.extraSuccesses.label"}}:
    {{results.extraSuccesses}}
    {{/if}}
    {{else if results.failed}}
    <div class="failure-banner">
      {{localize "TITAN.check.failed.label"}}
    </div>
    {{/if}}
  </div>
</div>