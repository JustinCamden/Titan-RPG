<div class="titan check skill-check">

  {{! Check title }}
  <div class="check-title">
    {{! Label is appropriate}}
    {{#if label}}
    <h2 class="check-label">
      {{label}}
    </h2>

    {{! Stats rolled }}
    <h3 class="check-stats">
      {{> "systems/titan/templates/checks/components/check-attribute-skill.hbs"}}
    </h3>
    {{else}}

    {{! Use the stats as the label if there is no label }}
    <h2 class="check-label">
      {{> "systems/titan/templates/checks/components/check-attribute-skill.hbs"}}
    </h2>
    {{/if}}
  </div>

  {{! Dice Container }}
  {{> "systems/titan/templates/checks/components/check-dice-container.hbs" }}

  {{! Results Banner }}
  {{> "systems/titan/templates/checks/components/check-results-banner.hbs" }}
</div>